@alias
  fs font-size
  ff font-family
  fr font-range
  fw font-weight
  bg background

html
  box-sizing border-box

*,
*:before,
*:after
  box-sizing inherit

body
  fs responsive 14px 21px
  fr 420px 1280px
  line-height 1.5

a
  color #08c
  text-decoration none

.site__wrapper
  lost-utility clearfix
  lost-center 1000px
  padding 0 20px

.site__body
  display flex
  flex-direction column
  min-height 100vh

.site__main
  flex 1
